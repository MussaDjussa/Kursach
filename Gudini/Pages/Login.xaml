<Page x:Class="BuckApp.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BuckApp.Pages"
      mc:Ignorable="d" 
      Height="800"
      Width="1500"
      Title="Login">

    <Grid Background="#FBF8F1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="580"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="120"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="2">
            <Button Style="{StaticResource ButtonStyle_Standart}"
                    Height="40"
                    Width="100"
                    VerticalAlignment="Top"
                    Margin="0,40,0,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Content="Выход" 
                    Click="Button_Click_1"/>
            <Button Style="{StaticResource ButtonStyle_Standart}"
                    Height="40"
                    Width="100"
                    VerticalAlignment="Top"
                    Margin="10"
                    Background="Transparent"
                    BorderThickness="0"
                    Content="Назад" 
                    Click="Button_Click"/>
        </StackPanel>


        <StackPanel Grid.Column="0"
            VerticalAlignment="Top"
            Margin="20"
            Panel.ZIndex="1">

            <TextBlock Text="Авторизация"
               FontFamily="PT Serif"
               FontSize="70"
               Foreground="#601818"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontWeight="Bold"
               Opacity="0.7"
               Panel.ZIndex="1"
               Margin="0,20"/>
        </StackPanel>

        <StackPanel Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="100,0,0,0">
            <TextBlock Style="{StaticResource TextBlockStandart}"
                           Text="Логин"
                           Foreground="Black"
                           FontWeight="Bold"
                           Opacity="0.5"
                           Margin="15,0,0,5"/>
            <TextBox Height="40" 
                         Width="220"
                         Style="{StaticResource TextBoxStyle_Standart}"
                         Background="Transparent"
                         x:Name="login"
                         TextChanged="login_TextChanged"/>
            <TextBlock Style="{StaticResource TextBlockStandart}"
                           Text="Пароль"
                           Foreground="Black"
                           FontWeight="Bold"
                           Opacity="0.5"
                           Margin="15,20,0,5"/>
            <TextBox Height="40" 
                         Width="220"
                         Style="{StaticResource TextBoxStyle_Standart}"
                         Background="Transparent"
                         x:Name="password"
                         TextChanged="password_TextChanged"/>
            <Button Content="Войти"
                    Style="{StaticResource ButtonStyle_Standart}"
                    Height="40"
                    Margin="0,20" Click="Button_Click_2"/>
        </StackPanel>

        <Border Grid.RowSpan="2" Grid.Column="0" Panel.ZIndex="0">
            <Image Opacity="0.2"  Stretch="UniformToFill" 
                   Source="C:\Users\amush\Desktop\gudini\Gudini\Images\Leadership-Books-on-Bookshelves-scaled.jpg"/>
        </Border>



    </Grid>

</Page>
