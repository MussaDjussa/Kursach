<Window x:Class="BuckApp.Windows.AddGenre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuckApp.Windows"
        mc:Ignorable="d"
        Title="AddGenre" Height="350" Width="250">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Style="{StaticResource TextBlockStandart}"
                       Text="Введите жанры"/>
            <TextBox x:Name="newgenre" Style="{StaticResource TextBoxStyle_Standart}"/>
            <TextBlock Style="{StaticResource TextBlockStandart}"
                       Text="Выбрать жанры"
                       Margin="0,20,0,0"/>
            <ComboBox x:Name="oldgenre" DisplayMemberPath="Name">
                
            </ComboBox>
            <Button Style="{StaticResource ButtonStyle_Standart}"
                    Margin="0,20,0,0"
                    Height="40"
                    Content="Добавить"/>
        </StackPanel>
    </Grid>
</Window>
